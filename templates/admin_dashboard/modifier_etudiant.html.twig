{# templates/admin/modifier_etudiant.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier un Étudiant{% endblock %}

{% block body %}
    <h1>Modifier un Étudiant</h1>

    <form method="post" action="{{ path('admin_modifier_etudiant', {'id': etudiant.id}) }}">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" value="{{ etudiant.nom }}" required>

        <label for="prenom">Prénom :</label>
        <input type="text" id="prenom" name="prenom" value="{{ etudiant.prenom }}" required>

        <label for="email">Email :</label>
        <input type="email" id="email" name="email" value="{{ etudiant.email }}" required>

        <!-- Autres propriétés de l'étudiant à modifier ici -->

        <button type="submit">Modifier</button>
    </form>

    <a href="{{ path('admin_dashboard') }}">Retour au dashboard</a>
{% endblock %}
