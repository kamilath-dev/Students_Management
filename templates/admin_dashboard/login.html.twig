{# templates/admin/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Connexion Admin{% endblock %}

{% block body %}
    <h1>Connexion Admin</h1>

    {% if error %}
        <p class="error">Identifiants invalides.</p>
    {% endif %}

    <form method="post" action="{{ path('admin_login') }}">
        <label for="username">Nom d'utilisateur :</label>
        <input type="text" id="username" name="username" value="{{ last_username }}" required>
        
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="password" required>
        
        <button type="submit">Se connecter</button>
    </form>
{% endblock %}
