{# templates/admin/ajouter_etudiant.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un Étudiant{% endblock %}

{% block body %}
    <h1>Ajouter un Étudiant</h1>

    <form method="post" action="{{ path('admin_ajouter_etudiant') }}">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" required>

        <label for="prenom">Prénom :</label>
        <input type="text" id="prenom" name="prenom" required>

        <label for="email">Email :</label>
        <input type="email" id="email" name="email" required>

        <!-- Autres propriétés de l'étudiant à ajouter ici -->

        <button type="submit">Ajouter</button>
    </form>

    <a href="{{ path('admin_dashboard') }}">Retour au dashboard</a>
{% endblock %}
